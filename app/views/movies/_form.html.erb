<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :youtube_url %>
    <%= form.text_area :youtube_url %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="checkbox">
    <span>タグ</span>
    <%= form.collection_check_boxes(:playlist_ids, Playlist.all, :id, :name) do |playlist| %>
      <div>
        <%= playlist.label do %>
          <%= playlist.check_box %>
          <%= playlist.text %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

